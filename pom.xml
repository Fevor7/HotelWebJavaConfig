<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>by.htp.itacademy</groupId>
	<artifactId>HotelWeb</artifactId>
	<version>1.0-SNAPSHOT</version>
	<packaging>pom</packaging>
	<name>HotelWeb</name>
	<modules>
		<module>Domain</module>
		<module>Dao</module>
		<module>Service</module>
		<module>Web</module>
	</modules>

	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<lombokVersion>1.16.18</lombokVersion> 
		<junitVersion>3.8.1</junitVersion> 
		<aspect.version>1.8.12</aspect.version>
		<jdbc.version>6.0.6</jdbc.version>
		<apache.commons>2.1.1</apache.commons>
		<servlet.api.version>3.1.0</servlet.api.version>
		<jsp.version>2.1</jsp.version>
		<jstl.version>1.2</jstl.version>
		<java.version>1.8</java.version>
		<log4j.version>1.2.17</log4j.version>
		<logging.log4j>2.5</logging.log4j>
		<spring.version>4.3.0.RELEASE</spring.version>
		<hibernate.version>5.2.2.Final</hibernate.version>
		<aspectj.version>1.8.10</aspectj.version>
		<gson.version>2.6.2</gson.version>
		<jackson.version>2.7.4</jackson.version>
